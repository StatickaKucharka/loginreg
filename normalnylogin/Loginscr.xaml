<Window x:Class="wpflogin.Loginscr"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpflogin"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="300" FontSize="14" Background="#82666f">
    <Border Background="#967c83" CornerRadius="20" Margin="20">
        <StackPanel>
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center" Margin="20"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="White" Margin="20,0,0,0"/>
            <TextBox Name="txtUsername" Background="#ded9d4" FontSize="18" Margin="20,0,20,0"/>
            <Label Content="Password" Foreground="White" Margin="20,0,0,0"></Label>
            <PasswordBox Name="txtPassword" Background="#ded9d4" FontSize="18"  Margin="20,0,20,0"></PasswordBox>
            <Button Name="btnSubmit" Content="Submit" Margin="60 10" Background="#ded9d4" FontSize="18"></Button>

        </StackPanel>
    </Border>
</Window>
